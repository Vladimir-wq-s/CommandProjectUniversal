<Window x:Class="CommandProjectUniversal.Views.ManageServicePlansWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Управление планами услуг" Height="400" Width="600" WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <Button Content="Добавить" Click="AddButton_Click"/>
            <Button Content="Редактировать" Click="EditButton_Click" Margin="10,0"/>
            <Button Content="Удалить" Click="DeleteButton_Click" Margin="10,0"/>
        </StackPanel>

        <DataGrid Grid.Row="1" x:Name="ServicePlansGrid" AutoGenerateColumns="False" Margin="10" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Цена в месяц" Binding="{Binding PricePerMonth}" Width="150"/>
                <DataGridTextColumn Header="Провайдер" Binding="{Binding Provider.Name}" Width="150"/>
                <DataGridTextColumn Header="Страна" Binding="{Binding Country.Name}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
