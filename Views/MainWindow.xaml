<Window x:Class="CommandProjectUniversal.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:oxy="http://oxyplot.org/wpf"
        mc:Ignorable="d"
        Title="CommandProjectUniversal - Управление интернет-услугами" Height="600" Width="1000"
        Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Меню для справочников -->
        <Menu Grid.Row="0">
            <MenuItem Header="Справочники">
                <MenuItem Header="Страны" Click="ManageCountriesMenuItem_Click"/>
                <MenuItem Header="Провайдеры" Click="ManageProvidersMenuItem_Click"/>
                <MenuItem Header="Планы услуг" Click="ManageServicePlansMenuItem_Click"/>
                <MenuItem Header="Клиенты" Click="ManageCustomersMenuItem_Click"/>
                <MenuItem Header="Продажи" Click="ManageSalesMenuItem_Click"/>
            </MenuItem>
        </Menu>

        <!-- Фильтры -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="10">
            <Button x:Name="HomeButton" Content="Главная страница" Click="HomeButton_Click"/>
            <TextBlock Text="Цена от:" VerticalAlignment="Center" Margin="10,0,5,0"/>
            <TextBox x:Name="MinPriceTextBox" Width="100" Margin="0,0,10,0"/>
            <TextBlock Text="до:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox x:Name="MaxPriceTextBox" Width="100" Margin="0,0,10,0"/>
            <Button x:Name="FilterButton" Content="Фильтровать" Click="FilterButton_Click" Margin="0,0,10,0"/>
            <Button x:Name="AddButton" Content="Добавить услугу" Click="AddButton_Click" Margin="0,0,10,0"/>
            <Button x:Name="EditButton" Content="Редактировать" Click="EditButton_Click" Margin="0,0,10,0"/>
            <Button x:Name="DeleteButton" Content="Удалить" Click="DeleteButton_Click" Margin="0,0,10,0"/>
            <Button x:Name="ReportButton" Content="Отчет" Click="ReportButton_Click"/>
        </StackPanel>

        <!-- DataGrid и PlotView -->
        <Grid Grid.Row="2">
            <DataGrid x:Name="ServicesGrid" AutoGenerateColumns="False" Margin="10" IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Название услуги" Binding="{Binding Name}" Width="*"/>
                    <DataGridTextColumn Header="План услуг" Binding="{Binding ServicePlan.Name}" Width="*"/>
                    <DataGridTextColumn Header="Провайдер" Binding="{Binding ServicePlan.Provider.Name}" Width="*"/>
                    <DataGridTextColumn Header="Страна" Binding="{Binding ServicePlan.Country.Name}" Width="*"/>
                    <DataGridTextColumn Header="Цена/мес" Binding="{Binding ServicePlan.PricePerMonth, StringFormat=C}" Width="100"/>
                    <DataGridTextColumn Header="Клиент (продажа)" Binding="{Binding Sale.Customer.Name}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
            <oxy:PlotView x:Name="PlotView" Visibility="Collapsed" Margin="10"/>
        </Grid>

        <!-- Статус -->
        <TextBlock x:Name="StatusTextBlock" Grid.Row="3" Margin="10" Text="Загрузка данных..."/>
    </Grid>
</Window>
